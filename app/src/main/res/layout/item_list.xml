<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/cardview_dark_background">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/logo"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:src="@drawable/batsworks"/>

        <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_toEndOf="@id/logo"
                android:id="@+id/top_row_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
            <TextView
                    android:id="@+id/mime_type"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/quality"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/fps"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/audio_quality"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/bottom_row_item"
                android:layout_marginVertical="5dp"
                android:layout_toEndOf="@id/logo"
                android:layout_below="@id/top_row_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
            <TextView
                    android:id="@+id/quality_label"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/size"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/approx_duration"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/content_length"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:layout_marginVertical="10dp"
                android:id="@+id/url"
                android:textColor="@color/white"
                android:layout_below="@id/bottom_row_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:selectAllOnFocus="true"
                android:textIsSelectable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/app_name"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>